      <SectionTitle
        title="Precios y planes"
        subtitle="Con nuestros planes puedes tener acceso a todas las funcionalidades de la app"
        minititle="Precios y planes"
        class="'mx-auto text-center'"
      />
      <Pricing />
    </Container>
  </SectionMuted>

