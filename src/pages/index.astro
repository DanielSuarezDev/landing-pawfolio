---
import Layout from "@layouts/Default.astro";
import ButtonMain from "@components/base/ButtonMain.astro";
import HeroMain from "@components/hero/HeroMain.astro";
import SectionMuted from "@components/section/SectionMuted.astro";
import Container from "@components/section/Container.astro";
import SectionTitle from "@components/section/SectionTitle.astro";
import IconBlock from "@components/content/IconBlock.astro";
import Toolbar from "@components/content/doctors/grid/Toolbar.astro";
import Filters from "@components/content/doctors/grid/Filters.astro";
import Grid from "@components/content/doctors/grid/Grid.astro";
import SideStatsRight from "@components/content/features/SideStatsRight.astro";
import SideStatsLeft from "@components/content/features/SideStatsLeft.astro";
import Pricing from "@components/content/Pricing.astro";
import Cta from "@components/content/Cta.astro";
import Testimonials from "@components/content/Testimonials.astro";
---

<Layout title="Home">
  <HeroMain />

  <SectionMuted>
    <Container>
      <SectionTitle
        title="Razones para elegirnos"
        subtitle="Con pawfolio puedes encontrar a los mejores beneficios para tu mascota"
        minititle="Lo que necesitas"
      />

      <div class="grid md:grid-cols-3 ltablet:grid-cols-4 lg:grid-cols-4 gap-x-6 gap-y-12" x-intersect="activeStep = ''">
        <!-- Item -->
        <div>
          <IconBlock
            title="Tiempo"
            text="Cuando un animal se enferma, el tiempo es vital. Por eso, con pawfolio puedes encontrar todo a la mano"
            icon="ph:timer-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Medicamentos"
            text="En nuestra app puedes tener una lista de medicamentos que tu mascota necesita, y así no olvidarlos"
            icon="ph:first-aid-duotone"
            class="'text-rose-500'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="24/7 Información"
            text="Tienes la información de tu mascota en cualquier momento y lugar"
            icon="ph:first-aid-kit-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Cuidados especiales"
            text="Puedes tener una lista de cuidados especiales y podras tener un control de ellos"
            icon="ph:heartbeat-duotone"
            class="'text-rose-500'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Notificaciones"
            text="Quieres programar una cita con el veterinario? No te preocupes, nosotros te avisamos"
            icon="ph:bell-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Administradores"
            text="Puedes agregar a los administradores de tu mascota, para que ellos también puedan tener acceso a la información"
            icon="ph:users-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Vacunas"
            text="Puedes tener un control de las vacunas que tu mascota necesita"
            icon="ph:syringe-duotone"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="Actividades"
            text="Compraste arena, el gato se cayó, se le acabó la comida, tuvo hijitos, etc. Puedes crear las actividades que quieras y todo quedara en el historial"
            icon="ph:calendar-blank-duotone"
            class="'text-primary-600'"
          />
        </div>
      </div>
    </Container>
  </SectionMuted>

