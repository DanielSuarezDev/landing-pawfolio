---
const {
  class: className,
  value,
  title,
  time,
  text,
  item1,
  item2,
  item3,
  item4,
  item5,
  item6,
  item7,
  item8,
  item9,
  item10,
  item11,
  item12,
} = Astro.props;
---

<div>
  <div
    class="w-full rounded-xl px-6 md:px-8 pt-6 md:pt-8 pb-4 border border-muted-200 dark:border-muted-700 bg-white dark:bg-muted-800 transition-colors duration-300"
  >
    <div class="flex items-center -mt-2">
      <div
        class="flex items-center justify-center h-12 w-12 border border-muted-200 dark:border-muted-700 rounded-full bg-white dark:bg-muted-800 mr-2"
      >
        <div
          class="flex items-center justify-center h-10 w-10 bg-rose-100 dark:bg-rose-100/10 rounded-full"
        >
          <i
            class="iconify w-5 h-5 text-rose-500"
            data-icon="ph:first-aid-duotone"></i>
        </div>
      </div>
      <h3
        class="font-heading text-2xl font-medium text-muted-800 dark:text-white"
      >
        {title}
      </h3>
    </div>

    <p class="font-sans text-sm py-2 mt-1 text-muted-500 dark:text-muted-400">
      {text}
    </p>
    <div class="flex items-center mt-2 mb-4">
      <h4
        class="font-heading text-4xl font-semibold text-muted-800 dark:text-white mr-4"
      >
        <!-- ${value} usd -->
        ${value}
      </h4>
      <span class="font-sans text-xs text-muted-500 dark:text-muted-400">
        <span>{time}</span>
      </span>
    </div>
    <ul class="pb-4 space-y-1 text-muted-400">
      {
        item1 && (
          <li class="flex items-center">
            <i class="iconify block mr-1" data-icon="lucide:check" />
            <span class="font-sans text-sm">{item1}</span>
          </li>
        )
      }
      {
        item2 && (
          <li class="flex items-center">
            <i class="iconify block mr-1" data-icon="lucide:check" />
            <span class="font-sans text-sm">{item2}</span>
          </li>
        )
      }
      {
        item3 && (
          <li class="flex items-center">
            <i class="iconify block mr-1" data-icon="lucide:check" />
            <span class="font-sans text-sm">{item3}</span>
          </li>
        )
      }
      {item4 && <li class="flex items-center">
        <i class="iconify block mr-1" data-icon="lucide:check"></i>
        <span class="font-sans text-sm">{item4}</span>
      </li>}

      {item5 && <li class="flex items-center">
        <i class="iconify block mr-1" data-icon="lucide:check"></i>
        <span class="font-sans text-sm">{item5}</span>
      </li>}

     {item6 && <li class="flex items-center">
        <i class="iconify block mr-1" data-icon="lucide:check"></i>
        <span class="font-sans text-sm">{item6}</span>
      </li>}

      {item7 && <li class="flex items-center">
        <i class="iconify block mr-1" data-icon="lucide:check"></i>
        <span class="font-sans text-sm">{item7}</span>
      </li>}

     {item8 && <li class="flex items-center">
        <i class="iconify block mr-1" data-icon="lucide:check"></i>
        <span class="font-sans text-sm">{item8}</span>
      </li>}

      {item9 && <li class="flex items-center">
        <i class="iconify block mr-1" data-icon="lucide:check"></i>
        <span class="font-sans text-sm">{item9}</span>
      </li>}

     {item10 && <li class="flex items-center">
        <i class="iconify block mr-1" data-icon="lucide:check"></i>
        <span class="font-sans text-sm">{item10}</span>
      </li>}

    {item11 &&  <li class="flex items-center">
        <i class="iconify block mr-1" data-icon="lucide:check"></i>
        <span class="font-sans text-sm">{item11}</span>
      </li>}

      {item12 && <li class="flex items-center">
        <i class="iconify block mr-1" data-icon="lucide:check"></i>
        <span class="font-sans text-sm">{item12}</span>
      </li>}

    </ul>
    <a
      href="https://app.pawfolio.pet"
      class="block w-full text-sm text-center font-sans my-2 py-4 font-medium text-primary-600 hover:text-muted-100 hover:bg-primary-500 hover:shadow-lg hover:shadow-primary-500/30 rounded-lg border border-primary-600/25 transition-all duration-300"
    >
      Crear cuenta
    </a>
  </div>
</div>
